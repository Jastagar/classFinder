<!DOCTYPE html>
<html lang="en">
<% const eachDaySchdulePass = eachDaySchdule %>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/style.css">
    <script>
        const eachDaySchdule = (<%- eachDaySchdulePass %>)
    </script>
    <script src="./js/script.js" defer></script>
    <title>Chitkara Utility</title>
</head>
<body style="height: 100vh;">
    <div class="container h-100">
        <div class="h-100 row justify-content-center">
            <div class="col-xl-6">
                <div class="d-flex align-items-center flex-column">
                <div class="col-md-4 my-2 border">
                    <select class="my-3 w-100" id="dayQuery" required>                        
                        <option value="">Today</option>
                        <option value="1">Monday</option>
                        <option value="2">Tuesday</option>
                        <option value="3">Wednesday</option>
                        <option value="4">Thursday</option>
                        <option value="5">Friday</option>
                    </select>
                    <select class="my-3 w-100" id="inputQuery" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                    </select>
                    <button onclick="handleGettingOccupiedClasses()" class="getData btn btn-dark w-75">Get free classes</button>
                </div>
                <div class="col-md-4 my-2">
                    <button onclick="handleQuickFind()" class="btn btn-primary w-75">Quick Find</button>
                </div>
            </div>
                <div class="ShowArea"></div>
                <button onclick="handleClear()" class="btn btn-outline-danger">&times; Clear</button>
                <a class="btn btn-outline-primary" href="/schdule">See Schdule</a>
            </div>
            
        </div>
    </div>
</body>
</html>